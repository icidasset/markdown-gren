    , "source"
    , "summary"
    , "table"
    , "tbody"
    , "td"
    , "tfoot"
    , "th"
    , "thead"
    , "title"
    , "tr"
    , "track"
    , "ul"
    ]


isClosed =
    { closed = True
    }


isOpen =
    { closed = False
    }


isHtmlType6 =
    andThen
        (\a ->
            if Array.member a.tagName htmlType6TagNames then
                succeed a
            else
                problem ""
        )


isHtmlType7 =
    andThen
        (\a ->
            if
                Array.member
                    a.tagName
                    [ "pre"
                    , "script"
                    , "style"
                    , "textarea"
                    ]
                    == False
            then
                succeed a
            else
                problem ""
        )
