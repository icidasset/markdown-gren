htmlType6TagNames =
    [ "address"
    , "article"
    , "aside"
    , "base"
    , "basefont"
    , "blockquote"
    , "body"
    , "caption"
    , "center"
    , "col"
    , "colgroup"
    , "dd"
    , "details"
    , "dialog"
    , "dir"
    , "div"
    , "dl"
    , "dt"
    , "fieldset"
    , "figcaption"
    , "figure"
    , "footer"
    , "form"
    , "frame"
    , "frameset"
    , "h1"
    , "h2"
    , "h3"
    , "h4"
    , "h5"
    , "h6"
    , "head"
    , "header"
    , "hr"
    , "html"
